
call pathogen#infect() 

" Enable syntax highlighting
syntax on

" size of a tab
set tabstop=4

" size of an "indent"
set shiftwidth=4

" always uses spaces instead of tab characters
set expandtab

" Set leader to ,
let mapleader = ","

" Show menu of files when autocompleting
set wildmenu


source ~/.vim/keybindings.vim

